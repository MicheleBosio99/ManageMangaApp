<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.berol.controller.NewSeriesController">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="203.0" layoutY="40.0" text="ADD NEW SERIES" textAlignment="CENTER">
         <font>
            <Font name="Tahoma" size="25.0" />
         </font>
      </Label>
      <Button fx:id="addNewSeriesButton" layoutX="248.0" layoutY="335.0" mnemonicParsing="false" onAction="#loadData" text="ADD SERIES">
         <font>
            <Font name="Tahoma" size="15.0" />
         </font>
      </Button>
      <Label layoutX="161.0" layoutY="115.0" prefHeight="15.0" prefWidth="34.0" text="TITLE" textAlignment="CENTER">
         <font>
            <Font name="Tahoma" size="12.0" />
         </font>
      </Label>
      <TextField fx:id="titleTextFiledNewSeries" layoutX="206.0" layoutY="110.0" prefHeight="26.0" prefWidth="234.0" />
      <Label layoutX="161.0" layoutY="165.0" prefHeight="15.0" prefWidth="65.0" text="PUBLISHER" textAlignment="CENTER">
         <font>
            <Font name="Tahoma" size="12.0" />
         </font>
      </Label>
      <TextField fx:id="publisherTextFiledNewSeries" layoutX="233.0" layoutY="160.0" prefHeight="26.0" prefWidth="206.0" />
      <Label layoutX="161.0" layoutY="215.0" prefHeight="15.0" prefWidth="110.0" text="PRICE PER VOLUME" textAlignment="CENTER">
         <font>
            <Font name="Tahoma" size="12.0" />
         </font>
      </Label>
      <TextField fx:id="priceVolumeTextFiledNewSeries" layoutX="318.0" layoutY="209.0" prefHeight="26.0" prefWidth="88.0" />
      <Label layoutX="161.0" layoutY="265.0" prefHeight="15.0" prefWidth="76.0" text="IS FINISHED?" textAlignment="CENTER">
         <font>
            <Font name="Tahoma" size="12.0" />
         </font>
      </Label>
      <ToggleButton fx:id="yFinishedButtonNewSeries" layoutX="321.0" layoutY="260.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="35.0" text="YES">
         <toggleGroup>
            <ToggleGroup fx:id="isFinishedGroup" />
         </toggleGroup>
      </ToggleButton>
      <ToggleButton fx:id="nFinishedButtonNewSeries" layoutX="371.0" layoutY="260.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="35.0" text="NO" toggleGroup="$isFinishedGroup" />
   </children>
</AnchorPane>
